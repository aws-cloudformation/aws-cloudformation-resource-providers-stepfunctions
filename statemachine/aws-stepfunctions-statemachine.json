{
    "typeName": "AWS::StepFunctions::StateMachine",
    "description": "Resource schema for StateMachine",
    "sourceUrl": "https://github.com/aws-cloudformation/aws-cloudformation-resource-providers-stepfunctions.git",
    "definitions": {
        "TagsEntry": {
            "type": "object",
            "properties": {
                "Key": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 128
                },
                "Value": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 256
                }
            },
            "additionalProperties": false,
            "required": [
                "Key",
                "Value"
            ]
        },
        "LogDestination": {
            "type": "object",
            "properties": {
                "CloudWatchLogsLogGroup": {
                    "type": "object",
                    "properties": {
                        "LogGroupArn": {
                            "type": "string",
                            "minLength": 1,
                            "maxLength": 256
                        }
                    }
                }
            }
        },
        "LoggingConfiguration": {
            "type": "object",
            "properties": {
                "Level": {
                    "type": "string",
                    "enum": [
                        "ALL",
                        "ERROR",
                        "FATAL",
                        "OFF"
                    ]
                },
                "IncludeExecutionData": {
                    "type": "boolean"
                },
                "Destinations": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "$ref": "#/definitions/LogDestination"
                    }
                }
            }
        }
    },
    "properties": {
        "Id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 2048
        },
        "Name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 80
        },
        "DefinitionString": {
            "type": "string",
            "minLength": 1,
            "maxLength": 1048576
        },
        "RoleArn": {
            "type": "string",
            "minLength": 1,
            "maxLength": 256
        },
        "StateMachineName": {
            "type": "string",
            "minLength": 1,
            "maxLength": 80
        },
        "StateMachineType": {
            "type": "string",
            "enum": [
                "STANDARD",
                "EXPRESS"
            ]
        },
        "LoggingConfiguration": {
            "$ref": "#/definitions/LoggingConfiguration"
        },
        "Tags": {
            "type": "array",
            "uniqueItems" : false,
            "items": {
                "$ref": "#/definitions/TagsEntry"
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "DefinitionString",
        "RoleArn"
    ],
    "readOnlyProperties": [
        "/properties/Name",
        "/properties/Id"
    ],
    "createOnlyProperties": [
        "/properties/StateMachineName"
    ],
    "primaryIdentifier": [
        "/properties/Id"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "states:CreateStateMachine"
            ]
        },
        "read": {
            "permissions": [
                "states:DescribeStateMachine"
            ]
        },
        "update": {
            "permissions": [
                "states:UpdateStateMachine",
                "states:TagResource",
                "states:UntagResource"
            ]
        },
        "delete": {
            "permissions": [
                "states:DeleteStateMachine"
            ]
        }
    }
}
